#version 330

#include "lighting.gh"

in vec2 texCoord0;
in vec3 normal0;
in vec3 worldPos0;

out vec4 fragColor;

uniform vec4 color;

uniform sampler2D diffuse;

uniform PointLight pointLight;

void main()
{
    fragColor = color * texture(diffuse, texCoord0.xy) * CalcPointLight(pointLight, normalize(normal0), worldPos0);
}